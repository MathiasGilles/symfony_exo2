{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}

{% if series is not empty %}

<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Start in</td>
            <td>Finish in</td>
            <td>Cover</td>
            <td>Number of seasons</td>
            <td>Category</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        {% for serie in series %}
            <tr>
                <td>{{serie.name}}</td>
                <td>{{serie.yearOfStart}}</td>
                <td>
                    {% if serie.yearOfEnd == 0 %}
                    <span class="badge badge-pill badge-danger">En cours</span>
                    {% else %}
                        {{serie.yearOfEnd}}
                    {% endif %}
                </td>
                <td>
                    {% if serie.image is not null %}
                    
                    <img src="{{asset('/uploads/'~ serie.image)}}" 
                    alt="cover" 
                    style="width:50px;height:50px;">
                </td>
                    {% endif %} 
                    <td>{{serie.numberOfSeason}}</td>
                <td></td>
                <td>
                    <a href="{{path('serie_detail', {id: serie.id})}}"><i class="fas fa-info"></i></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% else %}

<p>There is no series</p>

{% endif %}

{% endblock %}
